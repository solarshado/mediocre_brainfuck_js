{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "strict": true,
        "lib": [
            "deno.ns",
            "dom",
            "dom.iterable",
            "dom.asynciterable"
        ]
    },
    "lint": {
        "rules": {
            "tags": ["recommended"]
        }
    },
    "tasks": {
        "build": "deno bundle src/index.ts index.js",
        "watch": "deno bundle --watch src/index.ts index.js",
        "fmt": "dprint check"
    }
}
